import cv2
import numpy as np

# Step 1: Read image
image = cv2.imread("C:\\Users\\lenovo\\OneDrive\\Pictures\\Screenshots\\Screenshot 2026-02-11 105027.png")   # replace with your path

if image is None:
    print("Error: Unable to load image.")
    exit()

# Step 2: Convert to grayscale
gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)

# Step 3: Apply Sobel along X-axis
# dx=1, dy=0 â†’ derivative in x direction
sobelx = cv2.Sobel(gray, cv2.CV_64F, 1, 0, ksize=3)

# Step 4: Convert back to uint8
sobelx = cv2.convertScaleAbs(sobelx)

# Step 5: Display
cv2.imshow("Original Image", image)
cv2.imshow("Sobel X (Vertical Edges)", sobelx)

cv2.waitKey(0)
cv2.destroyAllWindows()
